{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fairspec Cardealer Profile",
  "allOf": [
    { "$ref": "https://fairspec.org/profiles/0.1.0/dataset.json" },
    { "$ref": "#/$defs/Dataset" }
  ],
  "$defs": {
    "Package": {
      "type": "object",
      "required": ["$schema", "resources"],
      "properties": {
        "$schema": {
          "const": "https://fairspec.github.io/fairspec-cardealer/profiles/0.1.0/dataset.json"
        },
        "resources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/Resource"
          }
        }
      }
    },
    "Resource": {
      "oneOf": [
        {
          "$ref": "#/$defs/CarResource"
        },
        {
          "$ref": "#/$defs/DealerResource"
        },
        {
          "$ref": "#/$defs/ShowroomResource"
        }
      ]
    },
    "CarResource": {
      "type": "object",
      "required": ["name", "data", "tableSchema"],
      "properties": {
        "name": {
          "const": "car"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Car table schema",
          "minItems": 1,
          "items": {
            "type": "object"
          }
        },
        "tableSchema": {
          "const": "https://fairspec.github.io/fairspec-cardealer/schemas/0.1.0/car.json"
        }
      }
    },
    "DealerResource": {
      "type": "object",
      "required": ["name", "data", "tableSchema"],
      "properties": {
        "name": {
          "const": "dealer"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Dealer table schema",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object"
          }
        },
        "tableSchema": {
          "const": "https://fairspec.github.io/fairspec-cardealer/schemas/0.1.0/dealer.json"
        }
      }
    },
    "ShowroomResource": {
      "type": "object",
      "required": ["name", "data", "tableSchema"],
      "properties": {
        "name": {
          "const": "showroom"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Showroom table schema",
          "minItems": 1,
          "items": {
            "type": "object"
          }
        },
        "tableSchema": {
          "const": "https://fairspec.github.io/fairspec-cardealer/schemas/0.1.0/showroom.json"
        }
      }
    }
  }
}
